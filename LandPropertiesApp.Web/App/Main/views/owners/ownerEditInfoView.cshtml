<form novalidate name="ownerInfoForm">
    <div class="form-group" ng-class="{'has-error': ownerInfoForm.FirstName.$invalid}">
        <label for="FirstName">FirstName</label>
        <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="First Name (required)" ng-model="vm.owner.firstName" required />
        <span class="help-block has-error" ng-show="ownerInfoForm.FirstName.$invalid">First name is required</span>
    </div>
    <div class="form-group" ng-class="{'has-error': ownerInfoForm.LastName.$invalid}">
        <label for="LastName">LastName</label>
        <input type="text" class="form-control" name="LastName" id="LastName" placeholder="Last Name (required)" ng-model="vm.owner.lastName" required />
        <span class="help-block has-error" ng-show="ownerInfoForm.LastName.$invalid">Last name is required</span>
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" placeholder="Address" ng-model="vm.owner.address" />
    </div>
    <div class="form-group" ng-class="{'has-error': ownerInfoForm.OwnerID.$invalid}">
        <label for="OwnerID">Owner ID</label>
        <input type="text" class="form-control" name="OwnerID" id="OwnerID" placeholder="Owner ID (required)" ng-model=" vm.owner.ownerUniqueId" required ng-maxlength="8" ng-pattern="vm.onlyNumbers" />
        <span class="help-block has-error" ng-show="ownerInfoForm.OwnerID.$error.required">Owner Id is required</span>
        <span class="help-block has-error" ng-show="ownerInfoForm.OwnerID.$error.maxlength">Owner ID cannot contain more than 8 numbers</span>
        <span class="help-block has-error" ng-show="ownerInfoForm.OwnerID.$error.pattern">Owner ID must contain only digits</span>
    </div>
    <div class="form-group">
        <div>
            <img ng-src="{{vm.owner.fullImageUrl}}" alt="Image">
        </div>
        <label for="attachment" class="col-md-2 control-label">Owner</label>
        <div class="col-md-10">
            @*<input type="file" name="attachment"
                class="form-control" data-ak-file-model="vm.landProperty.attachment" />*@

            <div>
                <input type="file" name="attachment" class="form-control" ng-file-select="onFileSelect($files)">
            </div>

        </div>
        <p class="help-block">Upload image for the property</p>
    </div>
    <button type="submit" class="btn btn-success" ng-click="vm.submit()" ng-disabled="ownerInfoForm.$invalid">Submit</button>
    <button type="submit" class="btn btn-primary" ng-click="vm.cancel()">Cancel</button>
</form>