<div>
    <div class="panel-body">
        <table class="table table-hover">

            <thead>
                <tr>
                    <td>Picture</td>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Address</td>
                    <td>Owner ID</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="owner in vm.owners">
                    <td>
                        <img ng-src="{{owner.imageUrl}}">
                    </td>
                    <td>{{ owner.id}}</td>
                    <td>{{ owner.firstName + " " + owner.lastName }}</td>
                    <td>{{ owner.address }}</td>
                    <td>{{ owner.ownerID }}</td>
                    <td>
                        <button class="btn btn-primary"
                                ui-sref="ownersEdit({ Id: owner.Id })">
                            Edit
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

        <button class="btn btn-primary"
                ui-sref="ownersEdit({ Id: 0 })">
            + Add
        </button>
    </div>
</div>