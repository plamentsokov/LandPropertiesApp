<form novalidate>
    <div class='container-fluid'>
        <div class="form-group">
            <input type="text" ng-model="vm.selectedOwner" placeholder="Owner" typeahead="owner as owner.firstName + owner.lastName for owner in vm.Owners | filter:{firstName:$viewValue} | limitTo:10"
                   class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-warning" ng-click="vm.addOwner()">Add owner</button>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success" ng-click="vm.submit()">Submit</button>
            <button type="submit" class="btn btn-primary" ng-click="vm.cancel()">Cancel</button>
        </div>     
    </div>
</form>