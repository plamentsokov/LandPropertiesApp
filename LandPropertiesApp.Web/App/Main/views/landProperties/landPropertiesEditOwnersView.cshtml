<table class="table table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Owner ID</td>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="owner in vm.landProperty.owners">
            <td>{{ owner.fullName }}</td>
            <td>{{ owner.ownerUniqueId }}</td>
        </tr>
    </tbody>
</table>

<form novalidate>
    <div class='container-fluid'>
        <div class="form-group">
            <input type="text" ng-model="vm.selectedOwner" placeholder="Owner" typeahead="owner as owner.fullName for owner in vm.Owners | filter:{fullName:$viewValue} | limitTo:10"
                   class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-warning" ng-click="vm.addOwner()">Add owner</button>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success" ng-click="vm.submit()">Submit</button>
            <button type="submit" class="btn btn-primary" ng-click="vm.cancel()">Cancel</button>
        </div>     
    </div>
</form>